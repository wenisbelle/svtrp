<?xml version="1.0"?> 

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="robot_essentials" >
<xacro:property name="wheel_color" value="0.0 0.0 0.0 1"/> <!-- RGBA values -->


<xacro:macro name="robot_wheel" params="prefix origin"> 

<link name="${prefix}_wheel"> 
  <collision>
    <origin xyz="${origin}" rpy="1.5707963267949 0 0" /> 
    <geometry> 
      <cylinder radius="0.06" length="0.04" />
    </geometry> 
  </collision> 

  <inertial> 
    <origin xyz="-4.1867E-18 0.0068085 -1.65658661799998E-18" rpy="0 0 0" /> 
    <mass value="0.378" /> 
    <inertia ixx="0.00856502765719703" ixy="1.5074118157338E-19" ixz="-4.78150098725052E-19" 
        iyy="0.013670640432096" iyz="-2.68136447099727E-19" izz="0.00856502765719703" /> 
  </inertial> 
  
  <visual> 
    <origin xyz="${origin}" rpy="1.5707963267949 0 0" /> 
    <geometry>        
      <cylinder radius="0.06" length="0.04" />
    </geometry>
    <material name="wheel_material">
        <color rgba="${wheel_color}"/>
    </material> 
  </visual> 

</link> 

<gazebo reference="${prefix}_wheel">
  <material>Gazebo/Black</material>
</gazebo>

</xacro:macro> 

<xacro:macro name="wheel_joint" params="prefix origin"> 
  <joint name="${prefix}_wheel_joint" type="continuous"> 
    <axis xyz="0 1 0"/> 
    <parent link ="base_link"/> 
    <child link ="${prefix}_wheel"/> 
    <origin rpy ="0 0 0" xyz= "${origin}"/> 
  </joint> 
</xacro:macro> 

<xacro:macro name="base_transmission" params="prefix "> 
  <transmission name="${prefix}_wheel_trans" type="SimpleTransmission"> 
    <type>transmission_interface/SimpleTransmission</type> 
    <joint name="${prefix}_wheel_joint"> 
   	  <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface> 
    </joint> 
  </transmission> 
</xacro:macro> 

<xacro:macro name="wheel_friction" params="prefix "> 
<gazebo reference="${prefix}_wheel"> 
<ode>
<mu1 value="0.80"/> 
<mu2 value="0.2"/> 
<kp value="1.0" /> 
<kd value="1.0" /> 
<fdir1 value="1 0 0"/> 
<slip1>0</slip1>
<slip2>0</slip2>
</ode>
</gazebo> 

</xacro:macro> 

</robot> 
